{% extends 'back-layout.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">{{ title }} un enseignant</h4>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.name, 'Nom et prenom') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.subject, 'Matière') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.subject, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.linefb, 'Compte facebook') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.linefb, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.phone, 'Telephone') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.degree, 'Grade') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.degree, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.experience, "Années d'experience") }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.experience, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.photo, 'Photo') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.photo.file) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.price, 'prix') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.price, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="row text-right">
                <button class="btn btn-success">{{ title }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock main %}
