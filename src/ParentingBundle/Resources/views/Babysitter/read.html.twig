{% extends "back-layout.html.twig" %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('plugins/datatables/css/jquery.dataTables.css') }}">
    <link href="{{ asset('plugins/datatables/extensions/Buttons/css/buttons.dataTables.css') }}" rel="stylesheet">
{% endblock %}

{% block main %}
    <!-- Breadcrumb -->
    <ol class="breadcrumb breadcrumb-2">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-home"></i>Home</a></li>
        <li class="active"><strong>Babysitters</strong></li>
    </ol>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Liste des babysitters</h4>
                    <ul class="panel-tool-options">
                        <li><a href="{{ path('create_babysitter') }}"><i class="fa fa-user-plus"></i> Ajouter</a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                            <tr>

                                <th>Id</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Téléphone</th>
                                <th>Région</th>
                                <th>Salaire</th>
                                <th>Image</th>
                                <th>Etat</th>
                                <th> </th>
                                <th> </th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for babysitter in babysitters %}
                            <tr class="gradeX">

                                <td>{{ babysitter.id }}</td>
                                <td>{{ babysitter.lastName}}</td>
                                <td>{{ babysitter.firstName }}</td>
                                <td>{{ babysitter.phone}}</td>
                                <td>{{ babysitter.address }}</td>
                                <td>{{ babysitter.price }}</td>
                                <td>{% if babysitter.image != null %}
                                        <img width="100" src="{{ asset(babysitter.image.webPath) }}">
                                    {% endif %} </td>
                                <td>{{ babysitter.state }}</td>
                                <td> <a  href="{{ path('update_babysitter', {'id':babysitter.id})}}"><button class="btn btn-success" type="button"> <i class="icon-check"></i> </button> </td>
                                <td> <a  href="{{ path('delete_babysitter', {'id':babysitter.id})}}"><button class="btn btn-danger" type="button"> <i class="icon-cancel"></i> </button></a> </td>
                            </tr>

                                {% endfor %}


                            </form>

                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </div>


    </div>
    </div>
    </div>



{% endblock %}
{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('plugins/datatables/js/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('plugins/datatables/extensions/Buttons/js/dataTables.buttons.min.js') }}"></script>
<script src="{{ asset('plugins/datatables/extensions/Buttons/js/buttons.html5.js') }}"></script>
<script src="{{ asset('plugins/datatables/extensions/Buttons/js/buttons.colVis.js') }}"></script>
<script>
    $(function () {
        $('table').DataTable({
            language : {
                url : "{{ asset('plugins/datatables/extensions/french.json') }}"
            },
            dom: '<"html5buttons" B>lTfgitp',
            buttons: [
                {
                    extend: 'copyHtml5',
                    exportOptions: {
                        columns: [ 0, ':visible' ]
                    }
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    exportOptions: {
                        columns: [ 0, 1, 2, 3, 4 ]
                    }
                },
                'colvis'
            ]
        });
        var users = [];
        $(':checkbox').change(function () {
            users = [];
            $(':checkbox:checked').each(function (i) {
                users[i] = $(this).attr('name');
            });
            if(users.length > 0)
                $('#user_count').text(users.length + " élément(s) sélectionné(s)");
            else
                $('#user_count').text("");
        });

        $('#action_ok').click(function () {
            $('.users').val(users);
            if($('#action_blk').val() === '0')
                $('#del_form').submit();
            else if ($('#action_blk').val() === '1')
                $('#dis_form').submit();
        })
    })
</script>
{% endblock %}



