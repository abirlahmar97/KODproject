{% extends "UserBundle:Admin:layout.html.twig" %}
{% block title %}Ajout d'un babysitter{% endblock %}

    {% block main %}
        <div class="row">
            <div >
                <div class="panel panel-default">
                    <div class="panel-heading clearfix">
                        <h4 class="panel-title">Ajouter un babysitter</h4>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="form-group row">
                            <div class="col-sm-2 control-label">
                                {{ form_label(form.firstName, 'Prénom') }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.firstName, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 control-label">
                                {{ form_label(form.lastName, 'Nom') }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.lastName, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 control-label">
                                {{ form_label(form.phone, 'Téléphone') }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 control-label">
                                {{ form_label(form.address, 'Adresse') }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.address, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 control-label">
                                {{ form_label(form.price, 'Salaire') }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.price, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 control-label">
                                {{ form_label(form.image, 'Image') }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.image.file, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 control-label">
                                {{ form_label(form.state, 'Etat') }}
                            </div>
                            <div class="col-sm-10">
                                {{ form_widget(form.state, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>

                    </div>
                </div>
                <button class="btn btn-secondary" >Ajouter</button>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    {% endblock %}

