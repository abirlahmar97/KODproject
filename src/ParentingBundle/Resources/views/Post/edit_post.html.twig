{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/dforum/css/post.css') }}" type="text/css"/>
{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="text-center">{{ 'discutea.forum.post.editpost'|trans }}</h1>
        <div class="row">
            <div class="col-md-12">
                <ul id="postsList" class="list-unstyled">

                    {% if postpreview %}
                        {% include 'DForumBundle:Post:preview-post.html.twig' %}
                    {% endif %}

                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if form is not null %}
                    <h2>form</h2>
                    {% include 'DForumBundle:Form:Post.html.twig' %}
                {% endif %}
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if app.user %}
        <script src="{{ asset('bundles/dforum/js/post.js') }}"></script>
        {% if is_granted('ROLE_MODERATOR') %}
            <script src="{{ asset('bundles/dforum/js/moderator/post.js') }}"></script>
        {% endif %}
    {% endif %}
{% endblock %}
