{% extends 'layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        #date {
            font-size: small;
        }
    </style>
{% endblock %}
{% block main %}
    <section class="pageTitleSection">
        <div class="container">
            <div class="pageTitleInfo">
                <h2>Articles</h2>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Articles</li>
                </ol>
            </div>
        </div>
    </section>
    <section class="mainContent full-width clearfix coursesSection">

        <div class="container">

            <div class="row">
                {% for article in articles %}
                    <div class="col-sm-4 col-xs-12 block">
                        <div class="thumbnail thumbnailContent">
                            <a href="#">
                                {% if article.image != null %}
                                    <img src="{{ asset(article.image.webPath) }}" alt="image" class="img-responsive">

                                {% endif %}

                            </a>
                            <div class="sticker-round bg-color-1" id="date"><br> {{ article.date|date('l F\n j\n Y  ')}} </div>
                            <div class="caption border-color-1">
                                <h3><a href="{{ path('more', {'id': 'article.id'}) }}" class="color-1">{{ article.title }}</a></h3>
                                <ul class="list-inline">
                                    <li><i class="fa fa-user" aria-hidden="true"></i>{{ article.auteur }}</li>
                                    <li><i class="fa fa-comments-o" aria-hidden="true"></i>4 Comments </li>
                                </ul>
                                <p>{{ article.subject }} </p>
                                <ul class="list-inline btn-yellow">
                                    <li><a class="btn btn-link" href="{{ path('more',{'id':article.id}) }}" ><i class="fa fa-angle-double-right" aria-hidden="true"></i> More</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>




                {% endfor %}
            </div>
        </div>
    </section>
















{% endblock %}
