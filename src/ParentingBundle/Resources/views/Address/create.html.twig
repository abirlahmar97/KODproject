{% extends "back-layout.html.twig" %}
{% block title %}Création d'une adresse utile{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/kmsfroalaeditor/froala_editor_2.7.5/css/froala_editor.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
    {% block main %}
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">Ajouter une adresse utile</h4>
            </div>
            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.name, 'Nom') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.description, 'Description') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.phone, 'Téléphone') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.lng, 'Longitude') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.lng, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.lat, 'Latitude') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.lat, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.location, 'Adresse') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.location, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.category, 'Catégorie') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.category, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 control-label">
                            {{ form_label(form.image, 'Image') }}
                        </div>
                        <div class="col-sm-10">
                            {{ form_widget(form.image.file, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>
                    </div>

                    <button class="btn btn-secondary">Ajouter</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>


    {% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/kmsfroalaeditor/froala_editor_2.7.5/js/froala_editor.min.js') }}"></script>
    <script>
        $(function() {
            $('.fr-view input').froalaEditor({toolbarInline: true})
        });
    </script>
{% endblock %}
