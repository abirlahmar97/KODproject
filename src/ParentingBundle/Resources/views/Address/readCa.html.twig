{% extends 'layout.html.twig' %}
{% block main %}
    <section class="pageTitleSection">
        <div class="container">
            <div class="pageTitleInfo">
                <h2>Articles</h2>
                <ol class="breadcrumb">
                    <li><a href="index.html">Accueil</a></li>
                    <li class="active">Adresses</li>
                </ol>
            </div>
        </div>
    </section>
    <section class="mainContent full-width clearfix coursesSection">

        <div class="container">

            <div class="row">
                {% for address in addresses %}
                    <div class="col-sm-4 col-xs-12 block">
                        <div class="thumbnail thumbnailContent">
                            <a href="#">
                                {% if address.image != null %}
                                    <img src="{{ asset(address.image.webPath) }}" alt="image" class="img-responsive">

                                {% endif %}

                            </a>
                            {#<div class="sticker-round bg-color-1"><br> Salut </div>#}
                            <div class="caption border-color-1">
                                <h3><a href="#" class="color-1">{{ address.name }}</a></h3>
                                <ul class="list-inline">
                                    <li><i class="fa fa-user" aria-hidden="true"></i>{{ address.location }}</li>
                                    <li><i class="fa fa-comments-o" aria-hidden="true"></i>4 Comments </li>
                                </ul>

                                <p>{{ address.description |length > 100 ? address.description|slice(0, 100) ~ '...' : address.description | raw }} </p>
                                <ul class="list-inline btn-yellow">
                                    <li><a class="btn btn-link" href="{{ path('more_addresses',{'id':address.id}) }}" ><i class="fa fa-angle-double-right" aria-hidden="true"></i> More</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>




                {% endfor %}
            </div>
        </div>
    </section>
















{% endblock %}
