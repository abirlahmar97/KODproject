{% extends "::back-layout.html.twig" %}

{% block title %}{{ title }} un Ã©venement{% endblock %}

{% block main %}
    {{ form_start(form) }}
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            {{ form_label(form.title, 'Titre :') }}
        </div>
        <div class="col-sm-10">
            {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            {{ form_label(form.type, 'Type:') }}
        </div>
        <div class="col-sm-10">
            {{ form_widget(form.type, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-2 control-label">
            {{ form_label(form.location, 'Adresse :') }}
        </div>
        <div class="col-sm-10">
            {{ form_widget(form.location, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2 control-label">
            {{ form_label(form.age, 'Age :') }}
        </div>
        <div class="col-sm-10">
            {{ form_widget(form.age, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2 control-label">
            {{ form_label(form.places, 'Nombre de personnes:') }}
        </div>
        <div class="col-sm-4">
            {{ form_widget(form.places, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
        <div class="col-sm-2 control-label">
            {{ form_label(form.price, 'Prix par personne :') }}
        </div>
        <div class="col-sm-4">
            {{ form_widget(form.price, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            {{ form_label(form.startDate, 'Date debut:', { 'attr' : { 'class' : 'control-label' } }) }}
        </div>
        <div class="col-sm-4">
            {{ form_widget(form.startDate) }}
            {{ form_errors(form.startDate) }}
        </div>
        <div class="col-sm-1 control-label">
            {{ form_label(form.endDate, 'Date fin:') }}
        </div>
        <div class="col-sm-5">
            {{ form_widget(form.endDate) }}
            {{ form_errors(form.startDate, { 'attr' : { 'class' : 'text-danger'} }) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 control-label">
            {{ form_label(form.photo, 'Photo') }}
        </div>
        <div class="col-sm-10">
            {{ form_widget(form.photo) }}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2 col-md-offset-10 control-label">
            <input type="submit" value="Ajouter" class="form-control">
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
