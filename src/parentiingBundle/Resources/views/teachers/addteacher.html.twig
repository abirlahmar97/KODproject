{% extends 'back-layout.html.twig' %}

{% block main %}
<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h4 class="panel-title">Ajouter un utilisateur</h4>
    </div>
    <div class="panel-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group row">
            <div class="col-sm-2 control-label">
                {{ form_label(form.subject, 'description du prof') }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.subject, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2 control-label">
                {{ form_label(form.price, 'prix') }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.price, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2 control-label">
                {{ form_label(form.name, 'prenom prof') }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 control-label">
                {{ form_label(form.lastname, 'nom prof') }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.lastname, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 control-label">
                {{ form_label(form.photo, 'photo prof') }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.photo, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>
        <br>
        <div class="form-group row">
            <div class="col-sm-2 control-label">
                {{ form_label(form.linefb, 'lien facebook prof ') }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.linefb, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>
<br>
        <div class="form-group row">
            <div class="col-sm-2 control-label">
                {{ form_label(form.phone, 'numero telephone du prof') }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>



        <button class="btn btn-success">ajouter prof</button>
        {{ form_end(form) }}
    </div>
</div>
        {% endblock main %}
