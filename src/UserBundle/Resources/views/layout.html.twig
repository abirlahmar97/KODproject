{% extends "layout.html.twig" %}

{% block main %}
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="container">
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>

{% endblock %}