{% extends 'layout.html.twig' %}

{% block main %}
    <section class="mainContent full-width clearfix">
        <div class="container">
            <div class="sectionTitle text-center">
                <h2>
                    <span class="shape shape-left bg-color-4"></span>
                    <span>Gestion du profil</span>
                    <span class="shape shape-right bg-color-4"></span>
                </h2>
            </div>
            <div class="row">
                <div class="col-sm-6 col-md-offset-3 col-xs-12">
                    <div class="homeContactContent">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                            <div class="form-group">
                                {{ form_widget(form.firstname, { 'attr' : { 'placeholder' : 'Prenom', 'class' : 'form-control border-color-1' }}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.lastname, { 'attr' : { 'placeholder' : 'Nom', 'class' : 'form-control border-color-2' }}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.phone, { 'attr' : { 'placeholder' : 'Telephone', 'class' : 'form-control border-color-3' }}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.region, { 'attr' : { 'placeholder' : 'RÃ©gion', 'class' : 'form-control border-color-4' }}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.photo.file, 'Image du profil') }}
                                {{ form_widget(form.photo.file) }}
                            </div>
                            <button class="btn btn-primary" type="submit">Send Message</button>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}