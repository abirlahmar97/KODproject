<div class="row" style="margin-top: 50px">
    {% if error %}
        <div class="col-md-8 col-md-offset-2">
            <div class="alert alert-default fade in">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        </div>
    {% endif %}
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-xs-12">
        <div class="panel panel-default formPanel">
            <div class="panel-heading bg-color-1 border-color-1">
                <h3 class="panel-title">Deja inscrit?</h3>
            </div>
            <div class="panel-body">
                <form role="form" action="{{ path('fos_user_security_check') }}" method="POST">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="form-group formField">
                        <input class="form-control" name="_username" type="text" placeholder="Adresse email ou Pseudo">
                    </div>
                    <div class="form-group formField">
                        <input class="form-control" name="_password" type="password" placeholder="Mot de passe">
                    </div>
                    <div class="row" style="margin-bottom: 10px">
                        <div class="col-md-12">
                            <input type="checkbox" checked class="check" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">Rester connecté</label>
                        </div>
                    </div>
                    <div class="form-group formField">
                        <input class="btn btn-primary btn-block bg-color-3 border-color-3" type="submit" value="Log in">
                    </div>
                    <div class="form-group formField">
                        <p class="help-block"><a href="{{ path('fos_user_change_password') }}">Mot de passe oubliée?</a></p>
                        <p class="help-block"><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
