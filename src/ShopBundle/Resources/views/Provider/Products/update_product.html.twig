{%extends "ShopBundle:Provider:layout.html.twig" %}

{% block title %}ShopBundle:ProdcutProviderController:updateProduct{% endblock %}

{% block main %}

    <section class="mainContent full-width clearfix">
        <div class="container">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.name, 'Nom du produit') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.description, 'Description') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.price, 'Prix') }}
                </div>
                <div class="col-sm-4">
                    {{ form_widget(form.price, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="col-sm-2 control-label">
                    {{ form_label(form.tva, 'TVA') }}
                </div>
                <div class="col-sm-4">
                    {{ form_widget(form.tva, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                </div>
                <div class="col-sm-10">
                    {{ form_label(form.available, 'Disponible') }}
                    {{ form_widget(form.available) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.category, 'Categorie') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.category, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.img, 'Image') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.img.file) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.age, 'Age') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.age, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.gender, 'Sexe') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.gender, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <button class="btn btn-success">Mettre Ã  jour</button>
            {{ form_rest(form)}}
            {{ form_end(form) }}

        </div>
    </section>
{% endblock %}
