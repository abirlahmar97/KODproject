{%extends "ShopBundle:Provider:layout.html.twig" %}

{% block title %}ShopBundle:ProdcutProviderController:createProduct{% endblock %}

{% block main %}

    <section class="mainContent full-width clearfix">
        <div class="container">
            <div class="sectionTitle text-center">
                <h2>
                    <span class="shape shape-left bg-color-4"></span>
                    <span>Forms</span>
                    <span class="shape shape-right bg-color-4"></span>
                </h2>
            </div>

            <h4 class="text-center">Contact form</h4>
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.name, 'name') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.description, 'description') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>

                       <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.price, 'price') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.price, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.available, 'available') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.available) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.category, 'category') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.category, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.img, 'img') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.img.file) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.tva, 'tva') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.tva, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <button class="btn btn-success">Ajouter</button>
            {{ form_end(form) }}
            <!-- Starts contact form 1 -->
            <div class="row">



                <div class="col-sm-6 col-xs-12">

                </div>
            </div><!-- Ends contact form 1 -->


        </div>
    </section>
{% endblock %}
