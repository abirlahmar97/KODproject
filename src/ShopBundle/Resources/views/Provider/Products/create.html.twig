{% extends "ShopBundle:Provider:layout.html.twig" %}

{% block title %}{{ parent() }} Ajouter un produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        label {
            width: 100%;
        }
    </style>
{% endblock %}

{% block main %}

    <div class="main-content">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">Ajouter un produit</h4>
            </div>
            <div class="panel-body">
                {{ form_start(form, { 'attr' : { 'class' : 'form-horizontal' } }) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(form.name, 'Nom du produit', { 'attr' : { 'class' : 'control-label' } }) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(form.description, 'Description', { 'attr' : { 'class' : 'control-label' } }) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(form.price, 'Prix', { 'attr' : { 'class' : 'control-label' } }) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.price, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                    <div class="col-sm-2">
                        {{ form_label(form.tva, 'TVA', { 'attr' : { 'class' : 'control-label' } }) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.tva, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(form.available, 'Disponible') }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.available) }}
                    </div>
                    <div class="col-sm-2">
                        {{ form_label(form.quantity, 'Quantit√©') }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.quantity, { 'attr' : { 'class' : 'form-control', 'min' : 1 }}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(form.category, 'Categorie', { 'attr' : { 'class' : 'control-label' } }) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.category, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(form.img, 'Image', { 'attr' : { 'class' : 'control-label' } }) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.img.file) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        {{ form_label(form.age, 'Age', { 'attr' : { 'class' : 'control-label' } }) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.age, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                    <div class="col-sm-2">
                        {{ form_label(form.gender, 'Sexe', { 'attr' : { 'class' : 'control-label' } }) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.gender, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="row text-right">
                    <button class="btn btn-success">Ajouter</button>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
