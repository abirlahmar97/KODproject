

{%extends "ShopBundle:Provider:layout.html.twig" %}

{% block title %}ShopBundle:ProdcutProviderController:createProduct{% endblock %}

{% block main %}

    <section class="mainContent full-width clearfix">
            {{ form_start(form) }}
            {{ form_errors(form) }}
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.email, 'Adresse email') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.username, 'Login') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.username, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.password, 'Mot de passe') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.password, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.infos.firstname, 'Nom') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.infos.firstname, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.infos.lastname, 'Prenom') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.infos.lastname, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.infos.phone, 'Numéro de telephone') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.infos.phone, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.infos.region, 'Région') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.infos.region) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.infos.photo, 'Photo') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.infos.photo.file) }}
                    </div>
                </div>


            <button class="btn btn-success">Ajouter</button>
            {{ form_end(form) }}
            <!-- Starts contact form 1 -->
            <div class="row">



                <div class="col-sm-6 col-xs-12">

                </div>
            </div><!-- Ends contact form 1 -->


        </div>
    </section>
{% endblock %}
