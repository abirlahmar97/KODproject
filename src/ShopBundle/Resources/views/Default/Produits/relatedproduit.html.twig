<div class="row">
    {% for produit in produits %}
        <div class="col-md-3 col-xs-6">
            {% set color = random(5)+1 %}
            <div class="box bg-color-{{ color }}">
                <div class="box-img border-color-{{ color }} text-center">
                    <a href="single-product.html">
                        <img src="{{ asset(produit.img.webPath) }}" alt="image" class="img-responsive">
                    </a>
                    <a data-toggle="modal" href=".quick-view" class="btn-block"><i class="fa fa-eye" aria-hidden="true"></i>Details</a>
                </div>
                <div class="box-info">
                    <h4>{{ produit.name }}</h4>
                    <div class="price">
                        <span>{{ produit.price }}</span>
                    </div>
                    <a href="cart-page.html" class="btn btn-primary "><i class="fa fa-shopping-basket " aria-hidden="true"></i>Ajouter au panier</a>
                </div>
            </div>
        </div>
{% endfor %}