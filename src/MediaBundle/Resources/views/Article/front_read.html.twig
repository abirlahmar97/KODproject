{% extends 'layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        #categorie {
            font-size: x-small;

        }
    </style>
    {% endblock %}
{% block main %}
<!-- PAGE TITLE SECTION-->
<section class="pageTitleSection">
    <div class="container">
        <div class="pageTitleInfo">
            <h2>Search Result</h2>
            <ol class="breadcrumb">
                <li><a href="index.html">Accueil</a></li>
                <li class="active">Articles</li>
            </ol>
        </div>
    </div>
</section>

<!-- MAIN SECTION -->
<section class="mainContent full-width clearfix">
    <div class="container">
        <div class="input-group searchArea">
            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="Search something..." id="recherche" name="article">
            <button type="submit" class="input-group-addon button" id="basic-addon21">Search</button>
        </div>
        <div class="resultInfo">
            {% if nombre is defined and search is defined %}
            <h3> {{ nombre }} Search results for “{{ search }}”</h3>
            {% endif %}

        </div>
    <div id="list" class="list">
        <list>
        <div class="row" >
            {% for article in articles %}
            <div class="col-xs-12">
                <div class="media courseList couresListPage">
                    <a class="media-left border-color-1" href="course-single-left-sidebar.html">
                        {% if article.image != null %}
                            <img src="{{ asset(article.image.webPath) }}" alt="image" class="media-object">

                        {% endif %}

                        <a id="categorie" href="{{ path('show_by_category',{'category':article.category.name}) }} "<span class="sticker-round bg-color-1">{{ article.category.name}}</span></a>
                    </a>
                    <div class="media-body">
                        <h3 class="media-heading"><a href="{{ path('more',{'id':article.id}) }}" class="color-1">{{ article.title }}</a></h3>
                        <ul class="list-inline">
                            <li><i class="fa fa-calendar-o" aria-hidden="true"></i>{{ article.subject }}</li>
                            <li><i class="fa fa-clock-o" aria-hidden="true"></i>{{ article.date |date }}</li>
                            <li> <i class="fa fa-user" aria-hidden="true"></i>{{ article.auteur }}</li>
                        </ul>
                        <p>{{ article.description |length > 200 ? article.description|slice(0, 200) ~ '...' : article.description | raw }} </p>
                        <ul class="list-inline btn-yellow btnPart">
                            {#<li><a href="cart-page.html" class="btn btn-primary "><i class="fa fa-shopping-basket " aria-hidden="true"></i>Add to Cart</a></li>#}
                            <li><a href="{{ path('more',{'id':article.id}) }}" class="btn btn-link"><i class="fa fa-angle-double-right" aria-hidden="true"></i> More</a></li>
                        </ul>
                    </div>
                </div>
                {% endfor %}
            </div>


            </table> </div>
        </list>
    </div>

        <div class="pagerArea text-center">
            <ul class="pager">
                <li class="prev"><a href="#"><i class="fa fa-arrow-left" aria-hidden="true"></i>Prev</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">...</a></li>
                <li><a href="#">15</a></li>
                <li class="next"><a href="#">Next<i class="fa fa-arrow-right" aria-hidden="true"></i></a></li>
            </ul>
        </div>
    </div>
</section>














{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('plugins/jquery/jquery-min-3.js') }}"> </script>
    <script >
        $(function () {
            $("#recherche").keyup(function () {
                $.ajax({
                    url : "{{ path('recherche_article') }}",
                    data : { 'article' : $(this).val() }
                }).done(function (response) {
                    console.log(response);
                    var list = $(response).find("list");
                    $('.list').empty();
                    $('.list').append(list);
                });
            });
        })
    </script>
{% endblock %}