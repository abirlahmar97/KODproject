{% extends "::back-layout.html.twig" %}
{% block title %}MediaBundle:Article:update{% endblock %}
{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Modifier un article</h4>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.description, 'Description') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.title, 'Titre ') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.subject, 'Sujet') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.subject, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.src, 'Source') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.src, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.date, 'Date') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.date) }}
                </div>
            </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.category, 'Catégorie') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.category, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.auteur, 'Auteur') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.auteur, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.type, 'Type') }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.type, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.image, 'Image') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.image.file, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>

            <button class="btn btn-secondary">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>

































{% endblock %}







