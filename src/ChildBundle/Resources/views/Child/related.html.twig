<div class="owl-carousel">
    {% for game in games %}
        <div class="side-games" style="margin: 10px; max-width: 100%">
            {% if game.icon != null %}
            <div style="height: 100px; background-image: url('{{ asset(game.icon.webPath) }}'); background-size: cover">
            </div>
            {% else  %}
            <div style="height: 100px; background-image: url('{{ asset('img/default_game.png') }}'); background-size: cover">
            </div>
            {% endif %}
            <div class="title" style="font-size: 10pt; padding: 10px 5px;">{{ game.name }}</div>
        </div>
    {% endfor %}
</div>