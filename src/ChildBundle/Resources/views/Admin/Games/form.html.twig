{% extends 'back-layout.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">{{ title }}</h4>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.name, 'Nom du jeu') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.url, 'Url') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.url, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.age, "Intervalle d'age") }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.age, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.device, "Appareils compatibles") }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.device) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.icon, 'Icone') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.icon) }}
                    </div>
                </div>
            <button class="btn btn-success">{{ btn }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

