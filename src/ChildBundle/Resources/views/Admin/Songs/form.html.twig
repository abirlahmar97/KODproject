{% extends 'back-layout.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">{{ title }}</h4>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.title, 'Nom de la chanson') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.singer, "Chanteur") }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.singer, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.duration, "Dur√©e") }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.duration) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.file, 'Lien') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.file) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 control-label">
                        {{ form_label(form.photo.file, 'Image') }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(form.photo.file) }}
                    </div>
                </div>
                <div class="row text-right">
                    <button class="btn btn-success">{{ btn }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

