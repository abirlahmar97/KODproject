{% extends 'back-layout.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">{{ title }}</h4>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.titre, "Titre") }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.titre , { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 control-label">
                    {{ form_label(form.url, "Lien") }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.url) }}
                </div>
            </div>
            <div class="text-right">
                <button class="btn btn-success" name="action" value="stay">Ajouter et rester</button>
                <button class="btn btn-success" name="action" value="exit">Ajouter et quitter</button>
            </div>
            {{ form_end(form) }}
            
        </div>
    </div>
{% endblock %}

