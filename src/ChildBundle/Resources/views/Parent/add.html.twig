{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/flat/red.css')}}" rel="stylesheet">
{% endblock %}

{% block main %}

    <section class="mainContent full-width clearfix">
        <div class="container">
            <div class="sectionTitle text-center">
                <h2>
                    <span class="shape shape-left bg-color-4"></span>
                    <span>Cr√©er un profil pour votre enfant</span>
                    <span class="shape shape-right bg-color-4"></span>
                </h2>
            </div>
            <div class="row">
                <div class="col-sm-6 col-md-offset-3 col-xs-12">
                    <div class="homeContactContent">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="form-group">
                            {{ form_widget(form.name, { 'attr' : { 'placeholder' : 'Prenom', 'class' : 'form-control border-color-1' }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.age, { 'attr' : { 'placeholder' : 'Age', 'class' : 'form-control border-color-3' }}) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Sexe</label>
                            {% for gender in form.gender %}
                                <label class="check">
                                    {{ form_errors(gender) }}
                                    {{ form_widget(gender) }}
                                </label>
                            {% endfor %}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.photo.file, "Photo de l'enfant") }}
                            {{ form_widget(form.photo.file) }}
                        </div>
                        <button class="btn btn-primary" type="submit">Sauvgarder</button>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('plugins/icheck/icheck.min.js') }}"></script>

{% endblock %}